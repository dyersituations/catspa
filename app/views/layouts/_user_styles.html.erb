<style>
  body {
    background: <%= Settings.instance.page_bg_color %>;
    color: <%= Settings.instance.page_font_color %>;
  }
  .navbar {
    background: <%= Settings.instance.navbar_bg_color %>;
    border-bottom: 1px solid <%= Settings.instance.navbar_border_color %>;
  }
  .navbar a {
    color: <%= Settings.instance.navbar_font_color %>;
  }
  .navbar a:hover {
    background: <%= Settings.instance.lighten_color(Settings.instance.navbar_bg_color) %>;
  }
  .navbar-toggler {
    border-color: <%= Settings.instance.navbar_font_color %>;
  }
  .navbar-toggler-icon {
    background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3e%3cpath stroke='<%= CGI.escape(Settings.instance.navbar_font_color) %>' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
  }
  .btn-group a {
    background: <%= Settings.instance.subnav_bg_color %>;
    color: <%= Settings.instance.subnav_font_color %>;
  }
  .sub-nav.btn-group a.btn:hover, .sub-nav.btn-group a.btn:active {
    background: <%= Settings.instance.lighten_color(Settings.instance.subnav_bg_color) %>;
    color: <%= Settings.instance.subnav_font_color %>;
  }
  <% if @page && !@page.banner.blank? && params[:action] == 'show' %>
    .banner {
      height: 300px;
      background: url('<%= @page.banner %>') center;
    }
  <% end %>
  footer {
    background: <%= Settings.instance.page_bg_color %>;
  }
  #nav .navbar-brand:active,
  #nav .nav-item:active {
    text-shadow: -0.02ex 0 <%= Settings.instance.navbar_font_color %>, 0.02ex 0 <%= Settings.instance.navbar_font_color %>;
  }
  .sub-nav.btn-group .btn:active {
    text-shadow: -0.02ex 0 <%= Settings.instance.subnav_font_color %>, 0.02ex 0 <%= Settings.instance.subnav_font_color %>;
  }
</style>
